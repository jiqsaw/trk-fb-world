<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>        
        <title> @HttpContext.GetGlobalResourceObject("Global", "PageTitle") </title>

        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta http-equiv="imagetoolbar" content="no" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

        <meta name="author" content="Wanda Digital" />
        <meta name="viewport" content="maximum-scale=1.6, minimum-scale=0.25" />
        <meta name="copyright" content="TurkcellFacebookDunyasi" />
        <meta name="robots" content="noindex, nofollow" />

        <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" href="/images/app_utils/apple-touch-icon.png" />
        <link rel="apple-touch-startup-image" href="/images/app_utils/apple-touch-startup-image.png" />
        
        
        <link href="~/Content/kendo/kendo.common.css" rel="stylesheet"/>
        <link href="~/Content/kendo/kendo.default.css" rel="stylesheet"/>

        <link href="~/Styles/utils/reset.css" rel="stylesheet"/>
        <link href="~/Styles/utils/common.css" rel="stylesheet"/>
        <link href="~/Styles/layout.css" rel="stylesheet"/>
        <link href="~/Styles/global.css" rel="stylesheet"/>
        <link href="~/Styles/form.css" rel="stylesheet"/>
        <link href="~/Styles/screen.css" rel="stylesheet"/>
        <link href="~/Styles/kendo.css" rel="stylesheet"/>
        <link href="~/Styles/print.css" rel="stylesheet"/>


        <link href="~/Scripts/app/jquery/plugins/colorbox/colorbox.css" rel="stylesheet"/>


        <!--[if lte IE 8]> <link rel="stylesheet" type="text/css" href='Styles/hack/ie8.css' media="all" /> <![endif]-->
        <!--[if lte IE 7]> <link rel="stylesheet" type="text/css" href='Styles/hack/ie7.css' media="all" /> <![endif]-->
        <!--[if lte IE 6]> <link rel="stylesheet" type="text/css" href='Styles/hack/ie6.css' media="all" /> <![endif]-->

        @RenderSection("styles", required: false)

        <script src="~/Scripts/jquery-1.7.2.min.js"></script>
        <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
        
        <script src="~/Scripts/app/jquery/plugins/colorbox/jquery.colorbox.js"></script>
        <script src="~/Scripts/app/jquery/plugins/utils.js"></script>
        <script src="~/Scripts/app/utils.js"></script>
        <script src="~/Scripts/app/global.js"></script>

        <script src="~/Scripts/kendo/kendo.web.js"></script>
        <script src="~/Scripts/kendo/kendo.aspnetmvc.js"></script>
        <script src="~/Scripts/app/kendoManager.js"></script>                          

        <script src="~/Scripts/app/init.js"></script>
        @*@Scripts.Render("~/Scripts/init")*@
                
        <!--[if lte IE 8]> <script type="text/javascript" src="/Scripts/app/extensions/html5.min.js"></script> <![endif]-->        

        @RenderSection("scripts", required: false)

    </head>
    <body>

        @Html.Partial("_AppDefault/BrowserDetect")
        @Html.Partial("_AppDefault/JsValues")       

        <header class="top">
            <aside class="container">
            
                <section class="left">
                    <a href="~/" class="logo">TurkcellFacebookDunyasi</a>
                </section>
                
                <section class="content">                                        
                    
                    @Html.Partial("Master/ContentLanguage")
                    
                    @Html.Partial("Master/Logout")

                    @Html.Partial("Common/Language")

                    @Html.Partial("Master/UserInfo")
                    
                </section>
            
            </aside>
        </header>

        <section class="body container">
            
            <aside class="left">
                
                @Html.Action("PanelMenu", "Modul")

            </aside>

            <aside class="content">                 
                
                <section id="PageBody">
                    @RenderBody()
                </section>

            </aside>
        
        </section>       

        <footer class="footer">
            <aside class="container">
                powered by Wanda Digital
            </aside>
        </footer>

        @Scripts.Render("~/bundles/jqueryval")

        @RenderSection("scriptsPreRender", required: false)

        <script src="@Url.Content("~/Scripts/app/jquery/globalize/jQuery.glob." + @String.Concat(GlobalVars.LanguageCulture) + ".js")" type='text/javascript'></script>
        <script src="@Url.Content("~/Scripts/kendo/cultures/kendo.culture." + @String.Concat(GlobalVars.LanguageCulture) + ".js")" type='text/javascript'></script>
        <script src="@Url.Content("~/Scripts/app/jquery/globalize/jQuery.globalize.min.js")"></script>

        @Scripts.Render("~/Scripts/render")

    </body>
</html>
